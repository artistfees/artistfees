      <select id="year" name="Year">
        <!-- Generate years from 2015 to current -->
        <script>
          const yearSelect = document.currentScript.parentElement.querySelector('#year');
          for (let y = 2015; y <= new Date().getFullYear(); y++) {
            const opt = document.createElement('option');
            opt.value = y;
            opt.textContent = y;
            yearSelect.appendChild(opt);
          }
        </script>
      </select>

